<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/sensor_db</property>
        <property name="hibernate.connection.username">server</property>
        <property name="hibernate.connection.password">server</property>


        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="ru.teamscore.common.entity.Device"/>
        <mapping class="ru.teamscore.common.entity.Sensor"/>
        <mapping class="ru.teamscore.common.entity.RawSensorData"/>


        <mapping class="ru.teamscore.common.entity.sensorsDataEntity.LocationData"/>
        <mapping class="ru.teamscore.common.entity.sensorsDataEntity.BarometerData"/>
        <mapping class="ru.teamscore.common.entity.sensorsDataEntity.LightData"/>
        <mapping class="ru.teamscore.common.entity.sensorsDataEntity.AccelerometerData"/>

    </session-factory>
</hibernate-configuration>